<GameOverScreen>:
    FloatLayout:
        BackgroundOver:
            id: background_over
            canvas.before:
                Rectangle:
                    source: self.this_source
                    size: self.width, self.height
                    pos: self.pos

        Button:
            pos_hint:{"x": 0.77, "y": 0.05}
            size_hint: 0.17, 0.1
            font_size: self.height*0.5
            background_color: 0.0, 0.0, 0.0, 1.0
            text: "Main Menu"
            on_release:
                root.return_main_menu()