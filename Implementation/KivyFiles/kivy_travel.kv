#:import Factory kivy.factory.Factory

<TravelScreen>:
    FloatLayout:
        Button:
            id: travel_1
            pos_hint:{"x": 0.35, "y": 0.55}
            size_hint: 0.6, 0.27
            font_size: self.height*0.22
            background_color: 0.0, 0.0, 0.0, 1.0
            text: "TRAVEL 1"
            on_release:
                root.travel(0)
                if root.light_inventory: Factory.ActionTime("Walking...").open()

        Button:
            id: travel_2
            pos_hint:{"x": 0.35, "y": 0.23}
            size_hint: 0.6, 0.27
            font_size: self.height*0.22
            background_color: 0.0, 0.0, 0.0, 1.0
            text: "TRAVEL 2"
            on_release:
                root.travel(1)
                if root.light_inventory: Factory.ActionTime("Walking...").open()
