#:import Factory kivy.factory.Factory

<ShelterScreen>:
    FloatLayout:

        Label:
            id: shelter_label
            text:"shelter: yes"
            size_hint: 0.25, 0.1
            font_size: self.height*0.4
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            pos_hint:{"x": 0.05, "y": 0.49}

        Label:
            id: raincatcher_label
            text:"raincatcher: no"
            size_hint: 0.25, 0.1
            font_size: self.height*0.4
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            pos_hint:{"x": 0.05, "y": 0.42}

        Button:
            pos_hint:{"x": 0.4, "y": 0.55}
            size_hint: 0.2, 0.2
            font_size: self.height*0.3
            background_color: 0.0, 0.0, 0.0, 1.0
            text: "REST 1H"
            on_release:
                root.rest(1)
                Factory.ActionTime("Sleeping...").open()

        Button:
            pos_hint:{"x": 0.65, "y": 0.55}
            size_hint: 0.2, 0.2
            font_size: self.height*0.3
            background_color: 0.0, 0.0, 0.0, 1.0
            text: "REST 4H"
            on_release:
                root.rest(4)
                Factory.ActionTime("Sleeping...").open()

        Button:
            id: rain_catcher_button
            pos_hint:{"x": 0.4, "y": 0.3}
            size_hint: 0.45, 0.2
            font_size: self.height*0.3
            background_color: 0.0, 0.0, 0.0, 1.0
            disabled: True
            text: "BUILD RAINCATCHER"
            on_release:
                root.build_raincatcher(0.25)
                Factory.ActionTime("Building...").open()
