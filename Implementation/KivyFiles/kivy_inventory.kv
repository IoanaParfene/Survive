<InventoryScreen>:
    FloatLayout:
        ProgressBar:
            id: my_inventory_capacity_bar
            min: 0
            max: 25
            value: 0
            background_color: 1, 0.3, 0.4, 0.85
            pos_hint:{"x": 0.05, "y": 0.69}
            size_hint: 0.25, 0.15
            canvas:
                BorderImage:
                    border: (12, 12, 12, 12)
                    pos: self.x, self.center_y - 12
                    size: self.width, 24
                    source: 'GraphicFiles/white.png'
                BorderImage:
                    border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
