<PauseScreen>:
    FloatLayout:
        BackgroundPause:
            id: background_pause
            canvas.before:
                Rectangle:
                    source: self.this_source
                    size: self.width, self.height
                    pos: self.pos

        Button:
            pos_hint:{"x": 0.425, "y": 0.62}
            size_hint: 0.17, 0.1
            font_size: self.height * 0.46
            background_color: 0.0, 0.0, 0.0, 1.0

            text: "SAVE & QUIT"
            on_release:
                root.save_quit_window()

        Button:
            pos_hint:{"x": 0.425, "y": 0.75}
            size_hint: 0.17, 0.1
            font_size: self.height * 0.5
            background_color: 0.0, 0.0, 0.0, 1.0
            text: "RESUME"
            on_release:
                root.change_window("game")