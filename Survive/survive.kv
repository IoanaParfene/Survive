<StartMenu>:
    FloatLayout:

        BackgroundStart:
            id: background_start
            canvas.before:
                Rectangle:
                    source: self.this_source
                    size: self.width, self.height
                    pos: self.pos

        Button:
            id: load_button
            pos_hint:{"x": 0.65, "y": 0.29}
            size_hint: 0.2, 0.1
            background_color: 0.0, 0.0, 0.0, 1.0
            font_size: 25
            text: "LOAD"
            on_release:
                root.manager.transition.direction = "right"
                root.try_loading()


        Button:
            pos_hint:{"x": 0.65, "y": 0.17}
            size_hint: 0.2, 0.1
            background_color: 0.0, 0.0, 0.0, 1.0
            font_size: 25
            text: "NEW GAME"
            on_release:
                root.manager.transition.direction = "right"
                root.new_game()


<GameWindow>:
    FloatLayout:
        Background:
            id: background
            canvas.before:
                Rectangle:
                    source: self.this_source
                    size: self.width, self.height
                    pos: self.pos

        Label:
            id: time_label
            text:"12 HOURS OF DAYLIGHT REMAINING"
            font_size:25
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            pos_hint:{"x": 0.02, "y": 0.85}
            size_hint: 0.7, 0.23

        Label:
            id: location_label
            text:"PIKE LAKE | DAY 1 | 50 MILES LEFT"
            font_size:25
